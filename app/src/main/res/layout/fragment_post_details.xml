<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1"
    tools:context=".PostDetails">
    <TextView
        android:id="@+id/warning"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The post doesn't exist"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:id="@+id/deleteWarning"
        android:background="#8D000000"
        android:translationZ="999999dp"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/warningbackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:text="Are you sure that you want to delete this picture?"

            />
        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes"
            android:textColor="#FFFFFF"
            android:background="@drawable/loginbtn"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no"
            android:textColor="#FFFFFF"
            android:background="@drawable/loginbtn"
            />
    </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/postDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <RelativeLayout
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profilenoimage"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#88B6B6B6"/>

        <TextView
            android:id="@+id/username"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profile_image"
            android:text=""
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"

            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/postimage"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/postlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                />
            <ImageView
                android:id="@+id/share"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sharebtn"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/download"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/downloadicon"
                android:layout_toLeftOf="@id/share"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_margin="15dp"
        android:textColor="#FFFFFF"
        android:text=""
        />

        <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_margin="10dp"
        android:textColor="#2196F3"
        android:text=""
        />
        <ListView
            android:id="@+id/taglist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            >
            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/chatedittextbubble"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:alpha="0.7"
                android:inputType="textCapSentences"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/sendbtn"
                android:hint="Write a comment..."

                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />
            <RelativeLayout
                android:id="@+id/sendbtn"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sendbtnback"
                android:layout_alignParentEnd="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sendicon"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>