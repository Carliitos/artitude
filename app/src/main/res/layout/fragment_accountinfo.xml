<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".accountinfo">



    <TextView
        android:id="@+id/userProfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="20sp"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="#FFFFFF"
        android:layout_below="@+id/profile_image"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/bios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userProfName"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profilenoimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#88B6B6B6"/>
    <LinearLayout
        android:id="@+id/followings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bios"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                />
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/maxFollowSize"
                android:layout_height="wrap_content"
                android:text="Likes"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                />
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/maxFollowSize"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="@dimen/maxFollowSize"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/loginbtn"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:text="Edit profile"
        android:textAllCaps="false"
        android:layout_below="@+id/followings"
        android:layout_alignStart="@+id/followings"
        android:layout_alignEnd="@+id/followings"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

